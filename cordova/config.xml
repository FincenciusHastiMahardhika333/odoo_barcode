<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.moldeointeractive.odoobarcode" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Odoo Barcode</name>
    <description>
        Scanner for Barcode sync with Odoo.
    </description>
    <author email="info@moldeointeractive.com.ar" href="http://www.moldeointeractive.com.ar">
        Moldeo Interactive
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="logo.png" />
	<splash src="splash.png" density="land-hdpi"/>
    	<splash src="splash.png" density="land-ldpi"/>
    	<splash src="splash.png" density="land-mdpi"/>
    	<splash src="splash.png" density="land-xhdpi"/>
    	<splash src="splash.png" density="port-hdpi"/>
    	<splash src="splash.png" density="port-ldpi"/>
    	<splash src="splash.png" density="port-mdpi"/>
    	<splash src="splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <preference name="Orientation" value="portrait" />
    <engine name="android" spec="^7.1.4" />
</widget>
